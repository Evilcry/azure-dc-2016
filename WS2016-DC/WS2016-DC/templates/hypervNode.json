{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "envName": {
      "type": "string",
      "metadata": {
        "description": "Please provide your environment name. It might be like this : Microsoft > msft"
      }
    },
    "vNETAddress": {
      "type": "string",
      "metadata": {
        "description": "Please provide your Virtual Network Address Prefix. It should be like this : 192.168.0 "
      }
    },
    "userName": {
      "type": "string",
      "metadata": {
        "description": "Please provide your windows user name. It shoudl be different Administrator: Mike"
      }
    },
    "userPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Please provide your windows user's password. It shoudl be different Administrator: Mike!s201"
      }
    },
    "DSC_hyperv_URL": {
      "type": "string"
    }
  },
  "variables": {
    "vnetID": "[resourceId(resourceGroup().name,'Microsoft.Network/virtualNetworks/',variables('vNETInfo').vNETName)]",
    "build_HyperV_Node1": {
      "vmSize": "Standard_F2s",
      "vMName": "[concat(parameters('envName'),'-node-01')]",
      "vmPIPName": "[concat(parameters('envName'),'-node-pip-01')]",
      "vmNicName": "[concat(parameters('envName'),'-node-nic-01')]",
      "vmNicIP": "[concat(parameters('vNETAddress'), '.136')]",
      "vmNSGName": "[concat(parameters('envName'),'-node-nsg-01')]",
      "vmAVName": "[concat(parameters('envName'),'-node-av-01')]",
      "VMDscName": "CreateADPDC",
      "VmDscArchive": "[parameters('DSC_hyperv_URL')]",
      "VmDscScript": "createadpdc.ps1",
      "VmDscFunction": "\\CreateADPDC",
      "vmNSGId": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(parameters('envName'), '-node-nsg-01'))]",
      "vmPIPId": "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('envName'), '-node-pip-01'))]",
      "vmDiagStorageName": "[concat(uniquestring(resourceGroup().id), 'diagstr')]",
      "virtualNetworkId": "[variables('vnetID')]",
      "virtualNetworkSubnetId": "[concat(variables('vnetID'),'/subnets/',concat(parameters('envName'), '-Application-Subnet'))]",
      "resourceLocation": "[resourceGroup().location]"
    },
    "vNETInfo": {
      "vNETName": "[concat(parameters('envName'),'-vn-01')]",
      "vNETAddress": "[concat(parameters('vNETAddress'),'.0/24')]",
      "vNETAZSubnetName": "AzureFirewallSubnet",
      "vNETSub01Name": "[concat(parameters('envName'),'-Application-Subnet')]",
      "vNETSub02Name": "[concat(parameters('envName'),'-Mangement-Subnet')]",
      "vNETAZSubnet": "[concat(parameters('vNETAddress'),'.0/25')]",
      "vNETSub01": "[concat(parameters('vNETAddress'),'.128/26')]",
      "vNETSub02": "[concat(parameters('vNETAddress'),'.192/26')]",
      "resourceLocation": "[resourceGroup().location]"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[variables('build_HyperV_Node1').vmPIPName]",
      "location": "[variables('build_HyperV_Node1').resourceLocation]",
      "apiVersion": "2018-10-01",
      "properties": {
        "publicIPAllocationMethod": "Static"
      }
    },
    {
      "apiVersion": "2017-11-01",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('build_HyperV_Node1').vmNicName]",
      "location": "[variables('build_HyperV_Node1').resourceLocation]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipConfigNode",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[variables('build_HyperV_Node1').vmNicIP]",
              "subnet": {
                "id": "[variables('build_HyperV_Node1').virtualNetworkSubnetId]"
              }
            }
          }
        ]
      },
      "dependsOn": [
        
      ]
    }
  ],
  "outputs": {
  }
}
