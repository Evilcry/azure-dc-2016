{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "envName": {
      "type": "string",
      "metadata": {
        "description": "Please provide your environment name. It might be like this : Microsoft > msft"
      }
    },
    "domainName": {
      "type": "string",
      "metadata": {
        "description": "Please provide your domain name. It might be like this : msft.com "
      }
    },
    "userName": {
      "type": "string",
      "metadata": {
        "description": "Please provide your windows user name. It shoudl be different Administrator: Mike"
      }
    },
    "userPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Please provide your windows user's password. It shoudl be different Administrator: Mike!s201"
      }
    }
  },
  "variables": {
    "vmNicName": "[concat(parameters('envName'),'-nic-01')]",
    "vmNSGName": "[concat(parameters('envName'),'-nsg-01')]",
    "vmNSGId": "/subscriptions/e8055386-2b08-4238-9749-edd80932c74e/resourceGroups/WS2016-DC/providers/Microsoft.Network/networkSecurityGroups/MSFT-nsg-01",
    "vmPIPName": "[concat(parameters('envName'),'-pip-01')]",
    "vmDiagStorageName": "[concat(uniquestring(resourceGroup().id), 'diagstr')]",
    "virtualNetworkId": "/subscriptions/e8055386-2b08-4238-9749-edd80932c74e/resourceGroups/WS2016-DC/providers/Microsoft.Network/virtualNetworks/MSFT-vn-01",
    "virtualNetworkSubnetId": "/subscriptions/e8055386-2b08-4238-9749-edd80932c74e/resourceGroups/WS2016-DC/providers/Microsoft.Network/virtualNetworks/MSFT-vn-01/subnets/MSFT-Application-Subnet",
    "vMName": "[concat(parameters('envName'),'-dc-01')]",
    "resourceLocation": "[resourceGroup().location]"

  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('vmDiagStorageName')]",
      "location": "[variables('resourceLocation')]",
      "apiVersion": "2018-07-01",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "Storage",
      "properties": {}
    },
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[variables('vmNSGName')]",
      "location": "[variables('resourceLocation')]",
      "properties": {
        "securityRules": [
          {
            "name": "rdp_rule",
            "properties": {
              "description": "Allow RDP",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "3389",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[variables('vmPIPName')]",
      "location": "[variables('resourceLocation')]",
      "apiVersion": "2018-10-01",
      "properties": {
        "publicIPAllocationMethod": "Static"
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('vmNicName')]",
      "location": "[variables('resourceLocation')]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipConfigDC",
            "properties": {
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses',variables('vmPIPName'))]"
              },
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('virtualNetworkSubnetId')]"
              },
              "networkSecurityGroup": {
                "id": "[variables('vmNSGId')]"
              }
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[variables('vmName')]",
      "location": "[variables('resourceLocation')]",
      "apiVersion": "2018-10-01",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts/', variables('vmDiagStorageName'))]",
        "[resourceId('Microsoft.Network/networkInterfaces/', variables('vmNicName'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "Standard_A2"
        },
        "osProfile": {
          "computerName": "[variables('vmName')]",
          "adminUsername": "[parameters('userName')]",
          "adminPassword": "[parameters('userPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "2016-Datacenter",
            "version": "latest"
          },
          "osDisk": {
            "name": "[concat(parameters('envName'),'-OsDisk-01')]",
            "createOption": "FromImage"
          },
          "dataDisks": [
            {
              "name": "[concat(parameters('envName'),'-DataDisk-01')]",
              "diskSizeGB": 10,
              "lun": 0,
              "createOption": "Empty"
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('vmNicName'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[reference(resourceId('Microsoft.Storage/storageAccounts/', variables('vmDiagStorageName'))).primaryEndpoints.blob]"
          }
        }
      }
    }
  ],
  "outputs": {}
}
