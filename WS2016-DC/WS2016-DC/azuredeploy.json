{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "envName": {
      "defaultValue": "MSFT",
      "type": "string",
      "metadata": {
        "description": "Please provide your environment name. It might be like this : Microsoft > msft"
      }
    },
    "vNETAddress": {
      "defaultValue": "172.10.0",
      "type": "string",
      "metadata": {
        "description": "Please provide your Virtual Network Address Prefix. It should be like this : 192.168.0 "
      }
    },
    "userName": {
      "type": "string",
      "metadata": {
        "description": "Please provide your windows user name. It shoudl be different Administrator: Mike"
      }
    },
    "userPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Please provide your windows user's password. It shoudl be different Administrator: Mike!s201"
      }
    },
    "domainName": {
      "type": "string",
      "metadata": {
        "description": "Please provide your domain name. It might be like this : msft.com "
      }
    }
  },
  "variables": {
    "templateBaseUrl": "https://raw.githubusercontent.com/hasangural/azure-dc-2016/master/WS2016-DC/WS2016-DC/templates/",
    "virtualNetworkUrl": "https://raw.githubusercontent.com/hasangural/azure-dc-2016/master/WS2016-DC/WS2016-DC/templates/virtualNetwork.json",
    "domainControllerUrl": "https://raw.githubusercontent.com/hasangural/azure-dc-2016/master/WS2016-DC/WS2016-DC/templates/domainController.json",
    "resourceLocation": "[resourceGroup().location]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "name": "1_virtualNetwork",
      "apiVersion": "2017-05-10",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('virtualNetworkUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "envName": {
            "value": "[parameters('envName')]"
          },
          "vNETAddress": {
            "value": "[parameters('vNETAddress')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "2_virtualMachine_DC",
      "apiVersion": "2017-05-10",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('domainControllerUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "envName": {
            "value": "[parameters('envName')]"
          },
          "userName": {
            "value": "[parameters('userName')]"
          },
          "userPassword": {
            "value": "[parameters('userPassword')]"
          },
          "domainName": {
            "value": "[parameters('domainName')]"
          }
        }
      }
    }
  ],
  "outputs": {
  }
}
