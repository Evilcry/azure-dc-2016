{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "envName": {
      "defaultValue": "MSFT",
      "type": "string",
      "metadata": {
        "description": "Please provide your environment name. It might be like this : Microsoft > msft"
      }
    },
    "VNETAddressSpace": {
      "defaultValue": "172.10.0",
      "type": "string",
      "metadata": {
        "description": "Please provide your Virtual Network Address Prefix. It should be like this : 192.168.0 "
      }
    },
    "userName": {
      "type": "string",
      "metadata": {
        "description": "Please provide your windows user name. It shoudl be different Administrator: Mike"
      }
    },
    "userPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Please provide your windows user's password. It shoudl be different Administrator: Mike!s201"
      }
    },
    "domainName": {
      "type": "string",
      "metadata": {
        "description": "Please provide your domain name. It might be like this : msft.com "
      }
    }
  },
  "variables": {
    "templateBaseUrl": "https://raw.githubusercontent.com/hasangural/azure-dc-2016/UpdateMerge/WS2016-DC/WS2016-DC/templates/",
    "virtualNetworkUrl": "[concat(variables('templateBaseUrl'),'virtualNetwork.json')]",
    "virtualNetwork_Update_Url": "[concat(variables('templateBaseUrl'),'virtualNetwork_Update.json')]",
    "azureFirewallUrl": "[concat(variables('templateBaseUrl'),'azurefirewall.json')]",
    "domainControllerUrl": "[concat(variables('templateBaseUrl'),'domainController.json')]",
    "hypervNodeUrl": "[concat(variables('templateBaseUrl'),'hypervNode.json')]",
    "DSC": {
      "DSC_domain": {
        "Link": "https://raw.githubusercontent.com/hasangural/azure-dc-2016/UpdateMerge/WS2016-DC/WS2016-DC/DSC/domain_build.zip"
      }
    },
    "resourceLocation": "[resourceGroup().location]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "name": "1_Deploy_VirtualNetwork",
      "apiVersion": "2017-05-10",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('virtualNetworkUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "envName": {
            "value": "[parameters('envName')]"
          },
          "VNETAddressSpace": {
            "value": "[parameters('VNETAddressSpace')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "2_Deploy_AzureFirewall",
      "apiVersion": "2017-05-10",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('azureFirewallUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "envName": {
            "value": "[parameters('envName')]"
          },
          "vNETAddress": {
            "value": "[parameters('VNETAddressSpace')]"
          }
        }
      },
      "dependsOn": [
        "1_Deploy_VirtualNetwork"
      ]
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "3_Deploy_VirtualMachine_DC",
      "apiVersion": "2017-05-10",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('domainControllerUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "envName": {
            "value": "[parameters('envName')]"
          },
          "vNETAddress": {
            "value": "[parameters('VNETAddressSpace')]"
          },
          "userName": {
            "value": "[parameters('userName')]"
          },
          "userPassword": {
            "value": "[parameters('userPassword')]"
          },
          "domainName": {
            "value": "[parameters('domainName')]"
          },
          "DSC_domain_1_URL": {
            "value": "[variables('DSC')['DSC_domain'].Link]"
          },
          "virtualNetwork_Update_URL": {
            "value": "[variables('virtualNetwork_Update_Url')]"
          }
        }
      },
      "dependsOn": [
        "1_Deploy_VirtualNetwork",
        "2_Deploy_AzureFirewall"
      ]
    }
  ],
  "outputs": {
  }
}
